#!/bin/bash
# Bun wrapper script - ensures Bun is available even if PATH isn't set
# This script finds and executes the actual bun binary

BUN_INSTALL="${BUN_INSTALL:-$HOME/.bun}"
BUN_BIN="$BUN_INSTALL/bin/bun"

# If bun is in PATH, use it
if command -v bun &> /dev/null; then
    exec bun "$@"
# Otherwise, use the installed location
elif [ -f "$BUN_BIN" ]; then
    exec "$BUN_BIN" "$@"
else
    echo "Error: Bun is not installed or not found." >&2
    echo "Please install Bun: curl -fsSL https://bun.sh/install | bash" >&2
    exit 1
fi



